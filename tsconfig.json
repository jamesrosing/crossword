{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "scripts/**/*",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "verify-setup.mjs",
    "generateWordList.js",
    "components/**/*",
    "lib/**/*",
    "app/**/*",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}